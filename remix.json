{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Remix",
  "_version": "2.0.0",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "~/*": [
        "app/*"
      ]
    },
    "noEmit": true
  }
}
